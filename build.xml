<?xml version="1.0"?>
<project name="Rectangle-Build" default="main" basedir=".">
    <property environment="env"/>


<propert name="src.dir" location="src" />
<propert name="build.dir" location="bin" />
<propert name="dist.dir" location="dist" />

<path id="class.path">
  <pathelement location="./bin" />
</path>


<target name="clean">
  <delete dir="${build.dir}" />
  <delete dir="${docs.dir}" />
  <delete dir="${dist.dir}" />
</target>


<target name="mkdir">
  <mkdir dir="${build.dir}" />
  <mkdir dir="${docs.dir}" />
  <mkdir dir="${dist.dir}" />
</target>


<target name="compile" depends="clean,mkdir">
  <javac srcdir="${src.dir}" destdir="${build.dir}">
    <classpath refid="class.path" />
  </javac>
</target>


<target name="jar" depends="compile">
  <jar destfile="${dist.dir}\rectangle.jar" basedir="${build.dir}">
    <manifest>
      <attribute name="Main-Class" value="Rectangulator" />
    </manifest>
  </jar>
</target>


<target name="main" depends="compile, jar">
  <description>Main target</description>
</target>

</project>
